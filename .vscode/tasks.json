{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build",
          "build",         // path to your build directory
          "--config",
          "Debug"          // or "Release" depending on your CMake setup
        ],
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "options": {
          "cwd": "${workspaceFolder}",
          "terminal": {
            "reveal": "never",   // or "never" if you prefer
            "close": true
          }
        },
        "detail": "Build the project using CMake (Debug)"
      },
      {
        "label": "build-release",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build",
          "build_release",
          "--config",
          "Release"
        ],
        "problemMatcher": [],
        "group": "build",
        "options": {
          "cwd": "${workspaceFolder}",
          "terminal": {
            "reveal": "always",
            "close": false
          }
        },
        "detail": "Build the project using CMake (Release)",
        "dependsOn": "configure-release"
      },
      {
        "label": "configure-release",
        "type": "shell",
        "command": "cmake",
        "args": [
          "-S", ".",
          "-B", "build_release",
          "-DCMAKE_BUILD_TYPE=Release"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "detail": "Configure CMake for Release build"
      },
      {
        "label": "clean-release",
        "type": "shell",
        "command": "rm",
        "args": ["-rf", "build_release"],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "detail": "Clean Release build directory"
      }
    ]
}